<h1>create a new figure</h1>
<form action="/figures" method="post">
  <label for="figure_name">figure name: </label>
  <input id="figure_name" type="text" name="figure[name]">


  <h4>title</h4>
  <%	Title.all.each do |title| %>
  <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><label><%=	title.name %></label><br>
  <%	end %>
  <p>with a new title</p>
  <input type="text" id="new_title" name="title[name]">


  <h4>landmark</h4>
  <%	 Landmark.all.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><label><%= landmark.name %></label><br>
  <%	 end %>
  <p>with a new landmark</p>
  <label>Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]">


  <input type="submit" value="Create New Figure">
</form>





