<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <div>
    <label for="figure_name">Figure Name</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
  </div>

  <br>

  <h2>Titles</h2>
  <h3>Select Existing Titles:</h3>
  <ul>
    <% @titles.each do |title| %>
        <li>
          <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>
          <label for="title_<%= title.id %>"><%= title.name %></label>
        </li>
    <% end %>
  </ul>
  <h3>And/or Add a New Title:</h3>
  <div>
    <label for="new_title">New Title</label>
    <input type="text" id="new_title" name="title[name]">
  </div>

  <br>

  <h2>Landmarks</h2>
  <h3>Select Existing Landmarks:</h3>
  <ul>
    <% @landmarks.each do |landmark| %>
        <li>
          <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
          <label for="landmark_<%= landmark.id %>"><%= landmark.name %></label>
        </li>
    <% end %>
  </ul>

  <h3>And/or Add a New Landmark:</h3>
  <div>
    <label for="new_landmark">New Landmark</label>
    <input type="text" id="new_landmark" name="landmark[name]">
  </div>

  <br>

  <input type="submit" value="Edit Figure">
</form>