<h1>Edit a New Figure</h1>
<form method="post" action="/figures/<%= @figure.id %>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <p>Name: <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></p>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
  <% end %>
  
  <br></br>
  
  <p>Or Create a new landmark</p>
  <p>landmark: <input type="text" name="landmark[name]" id="new_landmark"></p>
  <br></br>
  
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(landmark) %>><%= title.name %></input>
  <% end %>
  
  <br></br>
  
  <p>or create a new title</p>
  
  <p>title: <input type="text" name="title[name]" id="new_title"></p>
  
  <input type="submit" value="Edit Figure">
  
</form>